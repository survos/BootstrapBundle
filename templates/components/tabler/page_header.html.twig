{% set translationDomain = 'routing' %}{# configurable? #}

<div class="{{ ''|tabler_container }}">
    {# Page title #}
    <div id="{% block page_header_id %}{% endblock %}" class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                {% block page_intro %}
                    {% block breadcrumb %}
                        <div class="page-pretitle">
                            {% block page_pretitle %}{{ preTitle }}{% endblock %}
                        </div>
                    {% endblock %}
                    <h2 class="page-title">
                        {% block page_title %}{{ title|default(app.request.get('_route')|trans(domain=translationDomain)) }}{% endblock %}
                    </h2>
                    {% block page_subtitle %}
                        <div class="text-body-secondary mt-1">
                            {{ subTitle }}
                        </div>
                    {% endblock %}
                {% endblock %}
            </div>
            <div class="{% block page_actions_class %}col-12 col-md-auto ms-auto d-print-none{% endblock %}">
                {% block page_actions %}
